{
open System
open Parser
open Microsoft.FSharp.Text.Lexing

let keyword s = 
    match s with
    | "bool"      -> BTYP
    | "int"       -> ITYP
    | "read"      -> READ
    | "write"     -> WRITE
    | "if"        -> IF
    | "while"     -> WHILE
    | "true"      -> BOOL(true) 
    | "false"     -> BOOL(false)
    | "else"      -> ELSE
    | _           -> NAME s
}

let digit = ['0'-'9']
let whitespace = [' ' '\t' ]
let newline = ('\n' | '\r' '\n')


rule token = parse
| whitespace     { token lexbuf }
| newline        { newline lexbuf; token lexbuf }
| "("            { LP }
| ")"            { RP }
| "["            { LSP }
| "]"            { RSP }
| "{"            { LCP }
| "}"            { RCP }
| ","            { COMMA }
| ";"            { SEMI }
| ":="           { ASSIGN }
| "!"            { NEG }
| "||"           { OR }
| "&&"           { AND }
| "!="           { NEQ }
| "<"            { LT }
| ">"            { GT }
| "<="           { LE }
| ">="           { GE }
| "*"            { TIMES }
| "-"            { MINUS }
| "=="           { EQ }
| "+"            { PLUS }
| ['a'-'z']+     { ID(lexeme lexbuf) }
| ['-']?digit+   { INT (Int32.Parse(lexeme lexbuf)) }
| eof            { EOF }